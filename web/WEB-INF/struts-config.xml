    <!-- Definición de Formas -->
    <form-beans>
        <form-bean name="formaNuevaPersona"
                   type="edu.uag.iidis.scec.vista.FormaNuevaPersona">
        </form-bean>
        <form-bean name="formaNuevoRol"
                   type="edu.uag.iidis.scec.vista.FormaNuevoRol">
